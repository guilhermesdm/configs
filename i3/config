# General Settings
set $mod Mod4
set $alt Mod1

font pango:BlexMono Nerd Font 10

floating_modifier $mod
tiling_drag modifier titlebar

gaps inner 2
gaps outer 2

# ==========
# Auto start
# ==========

exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec --no-startup-id dunst
exec --no-startup-id feh --bg-fill $HOME/.config/i3/wallpaper.jpg
exec --no-startup-id udiskie --tray
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id picom --config $HOME/.config/picom/picom.conf
exec --no-startup-id xidlehook \
--detect-sleep \
--not-when-audio \
--not-when-fullscreen \
--timer 300 'xset dpms force standby' '' \
--timer 300 'i3lock' '' \
--timer 300 'systemctl suspend' ''

# ========
# Keybinds
# ========

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# lock
bindsym $mod+Shift+p exec $HOME/.config/i3/scripts/powermenu.sh

# Media binds
bindsym XF86AudioRaiseVolume exec pamixer -i 5 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec pamixer -d 5 && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMute exec pamixer -t && pkill -RTMIN+10 i3blocks
bindsym XF86AudioMicMute exec wpctl set-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioPlay exec playerctl play-pausecbindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Control brightness
# Display
bindsym XF86MonBrightnessDown exec brightnessctl set 10%- && pkill -RTMIN+10 i3blocks
bindsym XF86MonBrightnessUp exec brightnessctl set +10% && pkill -RTMIN+10 i3blocks

# Keyboard
bindsym XF86KbdBrightnessUp exec sh -c $HOME/.config/i3/scripts/kbdlight.sh

# Terminal
bindsym $mod+Return exec alacritty

# Launcher
bindsym $mod+d exec --no-startup-id rofi -show drun

# File explorer
bindsym $mod+e exec nemo 

# Kill focused window
bindsym $mod+Shift+q kill

# Layout
bindsym $alt+space exec sh $HOME/.config/i3/scripts/switch-keyboard.sh

# Printscreen
bindsym Print exec flameshot gui

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
# or
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
# or
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Fullscreen
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
bindsym $mod+s layout toggle split
bindsym $mod+v split v

# reload the configuration file
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Resize see #resize
bindsym $mod+r mode "resize"

# ========
# Worskpace
# ========

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# ====
# Mode
# ====

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# ============
# Color scheme
# ============
set $bg         #1a1b26
set $bg_alt     #16161e
set $fg         #c0caf5
set $accent     #7aa2f7
set $border     #3d59a1
set $urgent     #f7768e
set $white      #FFFFFF

# Window Borders
client.focused              $accent  $accent  $white $accent
client.focused_inactive     $border  $border  $fg  $border
client.unfocused            $bg_alt  $bg_alt  $fg  $bg_alt
client.urgent               $urgent  $urgent  $fg  $urgent
client.placeholder          $bg      $bg      $fg  $bg

for_window [class="Yad"] floating enable
for_window [class="Yad"] move position mouse

# ===
# Bar
# ===

bar {
	status_command SCRIPT_DIR=~/.config/i3/i3blocks/scripts i3blocks -c ~/.config/i3/i3blocks/config
  tray_output primary
	colors {
		background $bg
		statusline $fg
		separator  $accent

		focused_workspace  $accent $accent $bg
		inactive_workspace $bg_alt $bg_alt $fg
		urgent_workspace   $urgent $urgent $fg
	}
}
